pipeline{
    agent any
    stages{
        stage("build a code"){
            steps{
                sh "mvn clean install"
            }
        }
        stage("test a code"){
            steps{
                sh "mvn test"
            }
        }
        stage("deploy a code"){
            steps{ 
                sshagent(['deploy_java']) {
                   sh "scp -o StrictHostKeyChecking=no Project/java-app/target/java-jsp-diary.war ubuntu@54.166.171.81:/opt/tomcat/apache-tomcat-10.1.12/webapps" 
                }                             
            }
        }         
    }
}       